<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="dktrotti.ece301assignment1.MultiplayerActivity"
    android:id="@+id/Layout1"
    android:orientation="vertical"
    android:layout_alignParentStart="true"
    android:weightSum="1">

        <dktrotti.ece301assignment1.Buzzer
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buzzer1"
            android:layout_alignParentTop="true"
            android:text="Player 1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.25" />

        <dktrotti.ece301assignment1.Buzzer
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buzzer2"
            android:layout_below="@+id/buzzer1"
            android:text="Player 2"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:visibility="visible"
            android:layout_weight="0.25" />

        <dktrotti.ece301assignment1.Buzzer
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buzzer3"
            android:text="Player 3"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_below="@+id/buzzer2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.25"
            android:layout_margin="3dp"
            android:visibility="visible" />

        <dktrotti.ece301assignment1.Buzzer
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buzzer4"
            android:text="Player 4"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/buzzer3"
            android:visibility="visible"
            android:layout_marginTop="3dp"
            android:layout_weight="0.25"
            android:layout_margin="3dp" />
</LinearLayout>
